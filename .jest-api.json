{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "testEnvironment": "node",
  "testRegex": "test/api/.*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": ["@swc/jest", {
      "jsc": {
        "target": "es2022",
        "parser": {
          "syntax": "typescript",
          "decorators": true,
          "dynamicImport": true
        },
        "transform": {
          "legacyDecorator": true,
          "decoratorMetadata": true
        },
        "keepClassNames": true
      },
      "module": {
        "type": "commonjs"
      },
      "sourceMaps": "inline"
    }]
  },
  "setupFilesAfterEnv": [
    "<rootDir>/test/api/setup.ts"
  ],
  "moduleNameMapper": {
    "^joi-class-decorators$": "<rootDir>/src/index",
    "^joi-class-decorators/(.*)$": [
      "<rootDir>/src/$1"
    ]
  }
}
